# =============================================================================
# AI-Native Todo Full-Stack Web Application - Root Environment Variables
# =============================================================================
# Copy this file to .env and fill in the actual values.
# NEVER commit the .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Shared Authentication Secret
# -----------------------------------------------------------------------------
# This secret MUST be the same in both frontend and backend for JWT validation.
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-shared-secret-key-here-generate-with-openssl

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech:5432/neondb?sslmode=require

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL for frontend to connect to
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to 'development' or 'production'
NODE_ENV=development
PYTHON_ENV=development
